@model FitnessTracker.Client.ViewModels.Recipes.RecipeFormModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-4 offset-lg-4">
        <form asp-controller="Home" asp-action="PostRecipe" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Enter name">
                <label asp-for="Category"></label>
                <input asp-for="Category" type="number" class="form-control" id="name" placeholder="Enter Category">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" type="text" class="form-control" id="name" placeholder="Enter Image URL">
                <label asp-for="Instructions"></label>
                <input asp-for="Instructions" type="text" class="form-control" id="name" placeholder="Enter Instructions">
                <label asp-for="Fat"></label>
                <input asp-for="Fat" type="number" class="form-control" id="name" placeholder="Enter Fat">
                <label asp-for="Carbs"></label>
                <input asp-for="Carbs" type="number" class="form-control" id="name" placeholder="Enter Carbs">
                <label asp-for="Protein"></label>
                <input asp-for="Protein" type="number" class="form-control" id="name" placeholder="Enter Protein">
                <label asp-for="Salt"></label>
                <input asp-for="Salt" type="number" class="form-control" id="name" placeholder="Enter Salt">
                <label asp-for="Potassium"></label>
                <input asp-for="Potassium" type="number" class="form-control" id="name" placeholder="Enter Potassium">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="number" class="form-control" id="name" placeholder="Enter Price">
                <label asp-for="PreparationTime"></label>
                <input asp-for="PreparationTime" type="number" class="form-control" id="name" placeholder="Enter PreparationTime">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>